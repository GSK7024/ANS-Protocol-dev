# ANS Protocol Environment Variables
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git!

# ========================================
# SUPABASE (Required)
# ========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ========================================
# SOLANA RPC (Required)
# ========================================
# Use devnet for testing, mainnet for production
SOLANA_RPC_URL=https://api.devnet.solana.com
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# For mainnet, use Helius or other provider:
# SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY

# ========================================
# NETWORK (Optional)
# ========================================
# Set to 'devnet' for free testing, 'mainnet' for production
NEXT_PUBLIC_NETWORK=devnet

# ========================================
# WALLET ADDRESSES (Required for payments)
# ========================================
# These wallets receive domain registration payments
NEXT_PUBLIC_DEV_WALLET=your_dev_wallet_public_key
NEXT_PUBLIC_VAULT_WALLET=your_vault_wallet_public_key

# ========================================
# PRIVATE KEYS (Required for server-side operations)
# ========================================
# WARNING: Keep these SECRET! Never share or commit!
VAULT_PRIVATE_KEY=your_vault_private_key_base58
VAULT_SYSTEM_KEY=your_system_key_hex
ANS_MINT_PRIVATE_KEY=your_mint_private_key_base58

# ========================================
# AI/API KEYS (Optional)
# ========================================
GEMINI_API_KEY=your_gemini_api_key

# ========================================
# FEES (Optional)
# ========================================
ANS_FEE_ENABLED=true
ANS_FEE_PERCENT=0
